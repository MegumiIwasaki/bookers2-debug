<table class="table">
	<tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></tr>

	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>

	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>

  <tr>
    <th>follows</th>
    <th>
      <%= link_to following_user_path(user) do %>
      <%= user.followings.count %>
      <% end %>
    </th>
  </tr>

  <tr>
    <th>followers</th>
    <th>
      <%= link_to followers_user_path(user) do %>
      <%= user.followers.count %>
      <% end %>
    </th>
  </tr>
</table>

<% if user == current_user %>
  <div class="row">
  	<%= link_to edit_user_path(user) do %>
    <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_23818" aria-hidden="true"></span>
    <% end %>
  </div>
  <% elsif %>
    <div class="row">
      <%= link_to user_path(current_user) do %>
        <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_23818"></span>
        <% end %>
    </div>
    <% end %>